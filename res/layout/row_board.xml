<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:paddingTop="2dip" android:paddingBottom="2dip">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="match_parent"
		android:orientation="horizontal" android:background="#ededed">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/linearLayout2" android:layout_width="match_parent"
			android:orientation="vertical" android:paddingTop="5dip"
			android:paddingBottom="5dip">
			<TextView android:layout_height="wrap_content" android:text="제목" android:paddingLeft="6dip"
				android:layout_width="wrap_content" android:paddingTop="4dip" android:paddingBottom="2dip"
				android:id="@+id/board_subject" android:textStyle="bold" android:textColor="#C1001D"/>
			<RelativeLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/relativeLayout1">
				<TextView android:textSize="4pt"
					android:layout_alignParentLeft="true" android:text="작성일" android:paddingLeft="6dip"
					android:layout_width="wrap_content" android:paddingTop="4dip" android:paddingBottom="2dip"
					android:id="@+id/board_date" android:layout_height="wrap_content" android:textColor="#c1001d"/>
				<TextView android:textSize="4pt" android:text="작성자"
					android:layout_width="wrap_content" android:paddingTop="4dip" android:paddingBottom="2dip"
					android:id="@+id/board_writer" android:layout_height="wrap_content"
					android:layout_alignParentRight="true" android:paddingRight="6dip" android:textColor="#c1001d"/>
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
